@model project_prn231.Models.Answer

@{
    ViewBag.Title = "Chi tiết câu trả lời";
}
@if (Context.Session.GetString("IsAdmin") == "True")
{
<div class="container mt-4">
    <h2>Chi tiết câu trả lời</h2>

    <div class="card mb-3">
        <div class="card-header">
            Câu trả lời ID: @Model.AnswerId
        </div>
        <div class="card-body">
            <h5 class="card-title">Nội dung: @Model.AnswerText</h5>

            @if (!string.IsNullOrEmpty(Model.AnswerImage))
            {
                <img src="@Model.AnswerImage" alt="Hình ảnh câu trả lời" class="img-fluid" />
            }
            else
            {
                <p>Không có hình ảnh.</p>
            }

            <p>
                <strong>Đúng/Sai:</strong>
                @if ((bool)Model.IsCorrect)
                {
                    <span class="badge badge-success">Đúng</span>
                }
                else
                {
                    <span class="badge badge-danger">Sai</span>
                }
            </p>
        </div>
    </div>

    <h3>Thông tin thêm</h3>
    <p><strong>Câu hỏi ID:</strong> @Model.PkQuestionId</p>
    <p><strong>Người dùng ID:</strong> @Model.PkUserId</p>

    <div>
        <a href="/Answer/Update/@Model.AnswerId" class="btn btn-warning">Sửa</a>
        <a href="/Answer/Delete/@Model.AnswerId" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">Xóa</a>
        <a href="/Admin/Detail/@Model.PkQuestionId" class="btn btn-info">Quay lại danh sách câu trả lời</a>
    </div>
</div>
}
else
{
    <p class="text-danger">Bạn cần đăng nhập với tài khoản admin để thêm câu hỏi.</p>
}
<!-- Thêm link đến Bootstrap JS và CSS nếu chưa có -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
