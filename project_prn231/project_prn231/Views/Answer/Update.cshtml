@model project_prn231.Models.Answer

@{
    ViewBag.Title = "Cập nhật câu trả lời";
}
@if (Context.Session.GetString("IsAdmin") == "True")
{
<div class="container mt-4">
    <h2>Cập nhật câu trả lời</h2>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input type="hidden" name="AnswerId" value="@Model.AnswerId" />

        <div class="form-group">
            <label for="AnswerText">Nội dung câu trả lời:</label>
            <input type="text" class="form-control" id="AnswerText" name="AnswerText" value="@Model.AnswerText" required />
        </div>

        <div class="form-group">
            <label for="AnswerImage">Ảnh câu trả lời:</label>
            <input type="file" class="form-control" id="AnswerImage" name="AnswerImage" />
            <small class="form-text text-muted">Nếu bạn không muốn thay đổi ảnh, hãy để trống.</small>
        </div>

        <div class="form-group">
            <label for="IsCorrect">Đúng/Sai:</label>
            <select class="form-control" id="IsCorrect" name="IsCorrect" required>
                <option value="true" @((bool)Model.IsCorrect ? "selected" : "")>Đúng</option>
                <option value="false" @((bool)!Model.IsCorrect ? "selected" : "")>Sai</option>
            </select>
        </div>
        <input type="hidden" name="PkQuestionId" value="@Model.PkQuestionId" />
        <button type="submit" class="btn btn-warning">Cập nhật câu trả lời</button>
        <a href="/Admin/Detail/@Model.PkQuestionId" class="btn btn-secondary">Trở về</a>
    </form>
</div>
}
else
{
<p class="text-danger">Bạn cần đăng nhập với tài khoản admin để thêm câu hỏi.</p>
}
