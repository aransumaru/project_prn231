@model IEnumerable<project_prn231.Models.AnswerDetailViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết bài thi</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Chi tiết bài thi</h1>

        <div class="mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Câu trả lời</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AnswerText</td>
                            <td>@(item.IsCorrect ? "Đúng" : "Sai")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="@Url.Action("History", "History")" class="btn btn-primary">Trở lại lịch sử</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
