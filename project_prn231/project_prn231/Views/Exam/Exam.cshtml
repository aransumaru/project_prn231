@model project_prn231.Models.Exam // Đảm bảo rằng bạn đã định nghĩa model Exam trong dự án của mình

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kết quả bài thi</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Kết quả bài thi</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kết Quả</h5>
                <p><strong>Ngày thi:</strong> @(Model.ExamDate.HasValue ? Model.ExamDate.Value.ToString("dd/MM/yyyy HH:mm") : "Không có dữ liệu")</p>
                <p><strong>Số điểm đạt được:</strong> @Model.Point</p>
            </div>
        </div>

        <div class="mt-4">
            <h5>Cảm ơn bạn đã tham gia bài thi!</h5>
            <td>
                <a href="History/History/Detail?examId=@Model.ExamId&categoryId=@Model.PkCategoryId" class="btn btn-primary">Xem chi tiết</a>
            </td>
            <a href="/" class="btn btn-primary">Về trang chủ</a>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
